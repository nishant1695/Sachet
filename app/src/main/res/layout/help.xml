<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_help"
        layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/help_bg" />

    <Button
        android:id="@+id/area_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_help_round_edge"
        android:textSize="20sp"
        android:text="Area not in the list ?"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/crime_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_help_round_edge"
        android:textSize="20dp"
        android:text="Crime not in the list ?"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/unable_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_help_round_edge"
        android:textSize="20dp"
        android:text="Unable to login/register ?"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/edit_report_query"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#87CEFA"
        android:alpha="0.5"
        android:textSize="15dp"
        android:textColor="#000"
        android:hint="Write to us..."
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="48dp"
        android:text="Report"
        android:background="@drawable/bt_help_round_edge"
        android:textSize="15dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/help_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bt_help_round_edge"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Contact Us" />

</RelativeLayout>