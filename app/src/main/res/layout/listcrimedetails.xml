<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <include
        android:id="@+id/toolbar_listcrimedetails"
        layout="@layout/toolbar" />
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details of the offence"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ipc_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPC Section :"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_ipc_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#008080"
        android:layout_margin="5dp"
        android:hint="Details of IPC Section"/>

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary :"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#008080"
        android:layout_margin="5dp"

        android:hint="SUMMARY..."/>

    <TextView
        android:id="@+id/precaution_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Any Precautions/Cautions/Awareness :"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_pre_cau_ale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#008080"
        android:layout_margin="5dp"

        android:hint="Any Precautions/Cautions/Awareness "/>

    <TextView
        android:id="@+id/density"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Densely Populated at :"
        android:textSize="20dp" android:gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_density"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#008080"
        android:layout_margin="5dp"

        android:hint="Densely Populated at"/>


</LinearLayout>